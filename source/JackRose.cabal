name:               JackRose
version:            0.1
build-type:         Simple
cabal-version:      >= 1.20

executable JackRose
  main-is:            Main.hs
  default-language:   Haskell2010
  ghc-options:        -O2 -Wall -threaded -fno-warn-tabs
  build-depends:      base,
                      yesod,
                      yesod-core,
                      yesod-auth,
                      yesod-auth-account,
                      yesod-auth-hashdb,
                      text,
                      http-types,
                      bytestring,
                      fast-logger,
                      monad-logger,
                      monad-control,
                      hsql,
                      hsql-postgresql,
                      smtp-mail,
                      ConfigFile,
                      mtl,
                      stm,
                      transformers,
                      text-show,
                      time,
                      xml,
                      xml-conduit,
                      filepath,
                      blaze-html,
                      resourcet,
                      mime-mail,
                      persistent,
                      persistent-template,
                      persistent-sqlite,
                      containers
